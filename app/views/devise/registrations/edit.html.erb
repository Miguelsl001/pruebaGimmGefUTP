<div class="container">
<% content_for :devise_form do %>
<div class="row justify-content-center">
  <div class="col-10">
  <h2 class="pt-4 mb-8 text-4xl font-bold heading">Configurar cuenta <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <%= f.label :Nombre, class: "col-2 col-form-label text-black input-group-text" %>
      <div class="col">
        <%= f.text_field :nombre, class: "form-control shadow rounded input", placeholder: "Ingrese su nombre" %>
      </div>
      <%= f.label :Apellido, class: "col-2 col-form-label text-black input-group-text" %>
      <div class="col">
        <%= f.text_field :apellido, class: "form-control shadow rounded", placeholder: "Ingrese su apellido" %>
      </div>
    </div>

    <div class="input-group">
      <div class="row">
        <div class= "col-sm-4">
          <%= image_tag user_avatar(resource, 100), class:"rounded-circle" %>
        
          </div>
          <div class = "col-sm-8">
      <%= f.file_field :avatar %>
    </div>
    </div>
    </div>

    <div class="form-group row">
      <%= f.label :Programa_Academico, class: "col-1.5 col-form-label text-black input-group-text" %>
      <div class="col">
        <%= f.text_field :carrera, class: "form-control shadow rounded", placeholder: "Ingrese su programa academico" %>
      </div>
    </div>


    <div class="input-group">
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    </div>

    <div class="input-group">
      <%= f.label :password, class:"label" %>
      <%= f.password_field :password, autocomplete: "new-password", class:"input" %>
      <p class="pt-1 text-sm italic text-grey-dark"> <% if @minimum_password_length %>
          <%= @minimum_password_length %> characters minimum <% end %> (leave blank if you don't want to change it) </p>

    </div>

    <div class="input-group">
      <%= f.label :password_confirmation, class: "label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
    </div>

    <div class="input-group">
      <%= f.label :current_password, class: "label" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
      <p class="pt-2 text-sm italic text-grey-dark">(we need your current password to confirm your changes)</p>
    </div>

    <div class="input-group">
      <%= f.submit "Update", class: "btn btn-default" %>
    </div>
  <% end %>

  <hr class="mt-6 mb-3 border" />

  <h3 class="mb-4 text-xl font-bold heading">Cancel my account</h3>

  <div class="flex items-center justify-between">
    <div class="flex-1">
      <p class="py-4">Unhappy?</p>
    </div>

    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-red" %>
  </div>

<% end %>

<%= render 'devise/shared/form_wrap' %>
</div>
</div>
</div>
