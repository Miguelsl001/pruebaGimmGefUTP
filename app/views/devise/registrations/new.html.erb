<div class="container">
  <% content_for :devise_form do %>
  <div class="row justify-content-center">
    <div class="col-10">
      <h2 class="pt-4 mb-8 text-4xl text-center font-bold heading">Registrarse</h2>

      <%= render "devise/shared/error_messages", resource: resource %>
      <%= form_for(resource, as: resource_nombre, url: registration_path(resource_nombre)) do |f| %>

      <div class="form-group row">
        <%= f.label :Nombre, class: "col-2 col-form-label text-black input-group-text" %>
        <div class="col">
          <%= f.text_field :nombre, class: "form-control shadow rounded input", placeholder: "Ingrese su nombre" %>
        </div>
        <%= f.label :Apellido, class: "col-2 col-form-label text-black input-group-text" %>
        <div class="col">
          <%= f.text_field :apellido, class: "form-control shadow rounded", placeholder: "Ingrese su apellido" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :No_de_Documento, class: "col-2 col-form-label text-black input-group-text" %>
        <div class="col-10">
          <%= f.text_field :codigo, class: "form-control shadow rounded", placeholder: "Ingrese número de documento de identidad." %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :Usuario, class: "col-2 col-form-label text-black input-group-text" %>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Ingrese Nombre de Usuario" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :Correo, class: "col-2 col-form-label text-black input-group-text" %>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Ingrese Email" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :Rol, class: "col-2 col-form-labeltext-black input-group-text" %>
        <div class="col">
          <%= f.select :cargo, raw('<option selected disabled>Elegir...</option>
          <option>Estudiante</option>
          <option>Docente</option>
          <option>Investigador</option>
          <option>Visitante</option>'), {}, {class: "form-control shadow rounded"} %>
          <div class="invalid-feedback">
            Seleccionar un item valido.
          </div>
        </div>

        <%= f.label :Fecha_de_Nacimiento, class: "col-1.5 col-form-label text-black input-group-text" %>
        <div class="col">
          <%= f.text_field :bdate, data: { behavior: "flatpickr"}, class: "form-control shadow rounded" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :Programa_Academico, class: "col-1.5 col-form-label text-black input-group-text" %>
        <div class="col">
          <%= f.text_field :carrera, class: "form-control shadow rounded", placeholder: "Ingrese su programa academico" %>
        </div>
      </div>


      <div class="form-group row">
        <%= f.label :Genero, class: "col-2 col-form-label text-black input-group-text" %>
        <div class="col">
          <%= f.select :genero, raw('<option selected disabled>Elegir...</option>
          <option>Femenino</option>
          <option>Masculino</option>'), {}, {class: "form-control shadow rounded"} %>
          <div class="invalid-feedback">
            Seleccionar un item valido.
          </div>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :Telefono, class: "col-2 col-form-label text-black input-group-text" %>
        <div class="col-10">
          <%= f.text_field :telefono, class: "form-control shadow rounded", placeholder: "Ingrese número de telefono." %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :Contraseña, class: "col-2 col-form-label text-black input-group-text" %>

        <div class="col">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control shadow rounded", placeholder: "Ingresar Contraseña" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :Confirmar_Contraseña, class:"col-1.5 col-form-label text-black input-group-text" %>
        <div class="col">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow rounded", placeholder: "Confirmar Contraseña"  %>
        </div>
      </div>

      <div class="input-group row justify-content-center">
        <%= f.submit "Registrarse", class: "btn btn-success btn-sm col-xs-2 btn-primary-spacing" %>
        <%= link_to "Cancelar", root_path, class: "btn btn-danger btn-sm col-xs-2 btn-primary-spacing" %>
      </div>

      <hr class="mt-6 border" />

      <% end %>

      <% end %>

      <%= render "devise/shared/form_wrap" %>
    </div>
  </div>
</div>
