<div class="container">
  <% content_for :devise_form do %>
  <div class="row justify-content-center">
    <div class="col-10">
      <h2 class="pt-4 mb-8 text-4xl text-center font-bold heading">Ingresar</h2>
      <%= form_for(resource, as: resource_nombre,  url: session_path(resource_nombre)) do |f| %>


      <div class="form-group row">
        <%= f.label :Correo, class: "col-2 col-form-label text-black input-group-text" %>
        <div class="col-10">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow rounded", placeholder: "Ingresar Email." %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :Contraseña, class: "col-2 col-form-label text-black input-group-text" %>
        <div class="col-10">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control shadow rounded", placeholder: "Ingresar Contraseña." %>
        </div>
      </div>


      <div class="mb-6 input-checkbox">
        <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :Recordar, class:"label" %>
        <% end -%>
      </div>



      <div class="form-group row justify-content-center">
        <%= f.submit "Ingresar", class: "btn btn-success btn-sm col-xs-2 btn-primary-spacing" %>
      </div>

      <% end %>

      <hr class="mt-6 border" />

      <%= render "devise/shared/links" %>
      <% end %>

      <%= render "devise/shared/form_wrap" %>

    </div>
  </div>
</div>
